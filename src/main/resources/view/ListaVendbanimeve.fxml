<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:controller="Controllers.ListaVendbanimeveController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../css/HomeStyles.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <left>
        <VBox prefHeight="600.0" prefWidth="200.0" spacing="20.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <ImageView fitHeight="150.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Images/KosovoLogo.png" />
                    </image>
                </ImageView>
                <Button mnemonicParsing="false" styleClass="sidebar-button" text="%sidebar.register" />
                <Button mnemonicParsing="false" styleClass="sidebar-button" text="%sidebar.search" />
                <Button mnemonicParsing="false" styleClass="sidebar-button" text="%sidebar.list" />
                <Button mnemonicParsing="false" styleClass="sidebar-button" text="%sidebar.stats" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="600.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="TOP_RIGHT" spacing="10" styleClass="language-buttons">
                    <Button text="AL" onAction="#switchToAlbanian" />
                    <Button text="EN" onAction="#switchToEnglish" />
                </HBox>
                <Label prefWidth="548.0" styleClass="title"
                       text="%main.title"
                       wrapText="true">
                    <font>
                        <Font name="System Bold" size="23.0" />
                    </font>
                </Label>
                <Label styleClass="search-label" text="%list.title" />

                <TableView fx:id="vendbanimeTable" prefHeight="400.0" prefWidth="548.0" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="rrugaColumn" prefWidth="150.0" text="%list.column.rruga" />
                        <TableColumn fx:id="numriColumn" prefWidth="100.0" text="%list.column.numri" />
                        <TableColumn fx:id="kodiPostarColumn" prefWidth="150.0" text="%list.column.kodiPostar" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
