<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:controller="Controllers.KerkimetEFunditController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../css/HomeStyles.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1">

    <left>
        <VBox prefHeight="600.0" prefWidth="200.0" spacing="20.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" right="20.0" left="20.0" bottom="20.0"/>
            </padding>
            <children>
                <ImageView fitHeight="150.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Images/KosovoLogo.png"/>
                    </image>
                </ImageView>
                <Button mnemonicParsing="false" styleClass="sidebar-button" text="%sidebar.search" />
                <Button mnemonicParsing="false" styleClass="sidebar-button" text="%sidebar.recent" />
                <Button mnemonicParsing="false" styleClass="sidebar-button" text="%sidebar.mapsearch" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" alignment="TOP_LEFT" padding="20" BorderPane.alignment="CENTER">
            <Label text="Kërkimet e Fundit" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TableView fx:id="activityTable" prefHeight="400.0" prefWidth="550.0">
                <columns>
                    <TableColumn fx:id="colData" text="Data" prefWidth="150.0" />
                    <TableColumn fx:id="colAdresa" text="Adresa e Kërkuar" prefWidth="400.0" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
